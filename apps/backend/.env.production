# ARC-Hawk Backend Configuration - PRODUCTION

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=${POSTGRES_PASSWORD:-secure-password-change-in-production}
DATABASE_NAME=arc_platform
DATABASE_SSLMODE=require

# Server
PORT=8080
GIN_MODE=release

# CORS
ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:3000,https://your-domain.com}

# Presidio ML Integration
PRESIDIO_ENABLED=true
PRESIDIO_URL=http://presidio-analyzer:5001

# Neo4j Semantic Lineage
NEO4J_ENABLED=true
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD:-secure-password-change-in-production}

# Temporal Workflow Engine
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# Authentication - CRITICAL: Change these in production!
JWT_SECRET=${JWT_SECRET:-$(openssl rand -hex 64 2>/dev/null || echo "change-this-secure-random-string-min-32-chars")}

# Encryption - CRITICAL: Generate unique key for production
ENCRYPTION_KEY=${ENCRYPTION_KEY:-$(openssl rand -hex 32 2>/dev/null || echo "32-char-encryption-key-change-in-prod")}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
